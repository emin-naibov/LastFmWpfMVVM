<Application x:Class="LastFmWpfMVVMApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LastFmWpfMVVMApp" 
             xmlns:Views="clr-namespace:LastFmWpfMVVMApp.Views"
             xmlns:ViewModels="clr-namespace:LastFmWpfMVVMApp.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModels:HomeViewModel}">
            <Views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:DetailsViewModel}">
            <Views:DetailsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
